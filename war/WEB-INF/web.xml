         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
  	<servlet-name>KalkulatorS</servlet-name>
  	<servlet-class>com.example.remotetest.server.CalcServiceServlet</servlet-class>
